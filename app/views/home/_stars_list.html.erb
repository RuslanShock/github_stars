<%= turbo_frame_tag 'stars-list' do %>
  <div class="card w-50">
    <div class="card-body">
      <h5 class="card-title text-center">Best contributors</h5>
  <% stars.present? && stars.each_with_index do |star, index| %>
    <div class="row justify-content-around">
      <div class="col-3">
        <% place = index + 1 %>
        <%= "#{place}. #{star}" %>
      </div>
      <div class="col-3">
        <%= link_to icon('fa-regular', 'file-pdf'), :action => "get_pdf", :star => star, :place => place, :format => 'pdf' %>
      </div>
    </div>
  <% end %>
  <div class="text-center">
      <%= link_to "Download ZIP", { :action => "get_zip", :stars => stars, :format => 'zip' }, class: 'btn btn-outline-primary' %>
  </div>
    </div>
  </div>
<% end %>